---
import Layout from '../layouts/Layout.astro';
import TransactionDemo from './demo/transaction-demo.astro';
---

<Layout>
    <div class="w-full h-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4">
        <div class="bg-primary p-4 rounded-lg"></div>
        <div class="bg-primary p-4 rounded-lg"></div>
        <div class="bg-primary p-4 rounded-lg">
            <TransactionDemo />
        </div>
        <div class="bg-primary p-4 rounded-lg">
            <!-- Purchase order status selector -->
            <label for="purchase-order-status" class="block text-white mb-2">Purchase Order Status:</label>
            <select id="purchase-order-status" class="p-2 rounded-lg bg-secondary text-white">
                <option value="pending">Pending</option>
                <option value="completed">Completed</option>
                <option value="canceled">Canceled</option>
            </select>
        </div>
    </div>
</Layout>