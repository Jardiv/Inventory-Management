---
import Layout from '../layouts/Layout.astro';
import TransactionDemo from './demo/transaction-demo.astro';
import PurchaseDemo from './demo/purchase-demo.astro';
import ToastDemoSection from '../components/demo/ToastDemoSection.jsx';
import "/src/styles/global.css";
---

<Layout title="Demo - Inventory Management">
    <div class="w-full min-h-screen px-2 py-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-2">
        <ToastDemoSection client:load />
        <div class="bg-primary p-4 rounded-lg shadow-sm">
            <h3 class="text-lg font-semibold mb-2 text-textColor-primary">Future Components</h3>
            <p class="text-textColor-secondary text-sm">Reserved for additional demo features</p>
        </div>
        <div class="bg-primary p-4 rounded-lg shadow-sm">
            <TransactionDemo />
        </div>
        <div class="bg-primary p-4 rounded-lg shadow-sm">
            <PurchaseDemo />
        </div>
    </div>
</Layout>
