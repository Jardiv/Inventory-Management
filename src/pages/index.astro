---
import Layout from '../layouts/Layout.astro';
import DashboardTransactions from '../components/transactions/DashboardTransactions.jsx';
---

<!-- DASHBOARD -->
<Layout>
    <div class="h-full grid lg:grid-cols-5 lg:grid-rows-5 gap-4">
        <div class="bg-primary h-1/4 sm:h-auto lg:col-span-2 lg:row-span-3"></div>
        <div class="bg-primary h-1/4 sm:h-auto lg:col-span-3 lg:row-span-2"></div>
        <div class="bg-primary h-1/4 sm:h-auto lg:col-span-3 lg:row-span-4"></div>
        <div class="bg-primary overflow-auto h-1/4 sm:h-auto lg:col-span-2 lg:row-span-2 ">
            <DashboardTransactions client:load />
        </div>
    </div>
</Layout>
