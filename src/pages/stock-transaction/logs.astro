---
import Layout from '../../layouts/Layout.astro';
import DateTimeInput from '../../components/transactions/utils/DateTimeInput.astro';
import LogsTable from '../../components/transactions/LogsTable.jsx';

const currentPage = parseInt(Astro.url.searchParams.get('page') || '1');
const searchTerm = Astro.url.searchParams.get('search') || '';

console.log("Server-side searchTerm:", searchTerm);
---

<Layout>
	<DateTimeInput />

	<div class="flex flex-col gap-1 w-full bg-primary p-4 mt-4 rounded-lg">
		<div class="w-full flex justify-between">
			<h1 class="text-xl font-bold">Transaction Logs</h1>

			<a href="/stock-transaction/dashboard/" class="p-2 text-textColor-primary hover:bg-btn-hover hover:text-white rounded">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
					<path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
				</svg>
			</a>
		</div>

		<div class="p-2 flex flex-col gap-4">
			<LogsTable showPagination="true" currentPage={currentPage} searchTerm={searchTerm} client:load />
		</div>
	</div>
</Layout>

<script>
	// No-op script to enable client-side rendering
</script>
