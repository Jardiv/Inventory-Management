---
import Layout from '../../layouts/Layout.astro';
import Addmodal from '../../components/inventory/Addmodal.astro';
import Filter from '../../components/inventory/Filter.astro';
import { products } from '../../components/inventory/productInvenDATA.jsx';
---

<Layout>
  <Addmodal />



  <!-- INVENTORY OVERVIEW -->
  <section id="overviewSection">
    <!-- Inventory Summary -->
    <div class="bg-primary p-6 rounded-lg mb-6 ">
      <h2 class="text-xl font-semibold mb-4">Quick Summary</h2>
      <div class="grid grid-cols-4 gap-6 text-center">
        <div>
          <p class="text-textColor-primary text-sm">Total Products</p>
          <p class="text-lg font-bold">100</p>
        </div>
        <div>
          <p class="text-textColor-primary text-sm">Categories</p>
          <p class="text-lg font-bold">5</p>
        </div>
        <div>
          <p class="text-textColor-primary text-sm">Low Stock Products</p>
          <p class="text-lg font-bold">23</p>
        </div>
        <div>
          <p class="text-textColor-primary text-sm">Out of Stock Products</p>
          <p class="text-lg font-bold">6</p>
        </div>
      </div>
    </div>

    <!-- Product Table Preview -->
<div class="bg-primary p-6 rounded-lg">
  <div class="flex items-center justify-between mb-6 relative z-10">
    <div class="flex items-center gap-3">
      <h2 class="text-xl font-semibold">Product Inventory</h2>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center gap-2">
      <Filter />
      <a href="/inventory/ProductInventoryTBL/">
        <button class="text-btn-primary hover:text-purple-300 px-4 py-2 pr-0 text-sm sm:text-base">See All</button>
      </a>
    </div>
  </div>

  <!-- ðŸŸ£ Table Header -->
  <div class="grid grid-cols-4 items-center border-b border-border_color pb-2 font-semibold text-sm text-textColor-primary uppercase">
    <span>Item Code</span>
    <span class="text-left">Item Name</span>
    <span class="text-left">Category</span>
    <span class="text-left">Supplier</span>

  </div>

  <!-- ðŸŸ£ Table Body -->
  {products.slice(0, 9).map(product => (
    <div class="grid grid-cols-4 items-center border-b border-border_color py-2 text-sm">
      <span>{product.code}</span>
      <span class="text-left">{product.name}</span>
      <span class="text-left">{product.category}</span>
      <span class="text-left">{product.unit}</span>

      </span>
    </div>
  ))}
</div>

  </section>

  </main>
  </div>

  <script src="/scripts/inventory/inventory.js" is:inline></script>
</Layout>