---
import Layout from '../../layouts/Layout.astro';
import Addmodal from '../../components/inventory/Addmodal.astro';
import Filter from '../../components/inventory/Filter.astro';
import QuickSummary from '../../components/inventory/QuickSummary.jsx';
import ProductInventoryPreview from '../../components/inventory/productInvenDATA.jsx';
---

<Layout>
  <Addmodal client:load />

  <!-- INVENTORY OVERVIEW -->
  <section id="overviewSection">
<div id="product-results" class="mt-6"></div>

    <!-- Product Table Preview -->
    <div class="bg-primary p-6 rounded-lg">
      <div class="flex items-center justify-between mb-6 relative z-10">

        <!-- Left side: Title + Pending Items Button -->
        <div class="flex items-center gap-3">
          <h2 class="text-xl font-semibold">Product Inventory</h2>

          <!-- ðŸŸ¡ Pending Items Button -->
          <a href="/inventory/PendingItemsPreview/">
            <button
              class="bg-violet-500 hover:bg-btn-hover hover:text-white text-primary px-4 py-1.5 rounded text-sm transition">
              Pending Items
            </button>
          </a>
        </div> 

        <!-- âœ… Controls: Add, Filter, Download, Close -->
        <div class="flex items-center gap-2">
          <!-- âž• Add Button -->
          <button id="open-add-modal"
            class="flex items-center gap-2 rounded px-4 py-2 bg-primary text-textColor-primary  transition hover:bg-btn-hover hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
              fill="currentColor">
              <path d="M440-440H200v-80h240v-240h80v240h240v80H520v240h-80v-240Z" />
            </svg>
          </button>

          <!-- ðŸ” Filter -->
          <!-- ðŸ” Filter (handled inside React component) -->
<button
  id="toggle-filters"
  class="flex items-center gap-2 rounded px-4 py-2 bg-primary text-textColor-primary transition hover:bg-btn-hover hover:text-white"
  onClick="document.querySelector('#react-filter-btn')?.click()"
>
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none"
    stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
    <line x1="3" y1="6" x2="21" y2="6" />
    <line x1="6" y1="12" x2="18" y2="12" />
    <line x1="9" y1="18" x2="15" y2="18" />
  </svg>

</button>




          <!-- âœ… Close / Back Button (Even Padding) -->
          <a href="/inventory/Dashboard"
            class="inline-flex items-center justify-center w-9 h-9 text-textColor-primary hover:bg-btn-hover hover:text-white rounded">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
              stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>  
          </a>

        </div>
      </div>

      <!-- React Component for product inventory preview -->
      <ProductInventoryPreview client:load limit={10} paginated={true} />
    </div>
  </section>

  <script src="/scripts/inventory/inventory.js" is:inline></script>
</Layout>