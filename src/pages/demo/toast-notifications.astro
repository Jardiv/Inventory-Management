---
import Layout from '../../layouts/Layout.astro';
import ToastContainer from '../../components/common/ToastContainer.jsx';
import ToastDemo from '../../components/demo/ToastDemo.jsx';
---

<Layout title="Toast Notifications - Inventory Management">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-2">
          Toast Notification System
        </h1>
        <p class="text-gray-600 dark:text-gray-300">
          Comprehensive notification system for inventory management operations
        </p>
      </div>
      
      <ToastDemo client:load />
      
      <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-bold mb-4 text-gray-800 dark:text-white">
          Notification Categories
        </h2>
        
