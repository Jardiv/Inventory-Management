<Layout>
	<div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg p-8 space-y-8">
    
    <!-- Primary Details -->
    <section>
      <h2 class="text-xl font-semibold border-b pb-2 mb-4">Primary Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-sm text-gray-500">Invoice No</p>
          <p class="font-medium">INV-001245</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Date</p>
          <p class="font-medium">2025-08-01</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Status</p>
          <span class="inline-block px-3 py-1 text-sm font-semibold text-green-700 bg-green-100 rounded-full">
            Paid
          </span>
        </div>
      </div>
    </section>

    <!-- Supplier Details -->
    <section>
      <h2 class="text-xl font-semibold border-b pb-2 mb-4">Supplier Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-sm text-gray-500">Supplier</p>
          <p class="font-medium">ABC Supplies Ltd.</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Contact No</p>
          <p class="font-medium">+1 234 567 8901</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Location</p>
          <p class="font-medium">New York, USA</p>
        </div>
      </div>
    </section>

    <!-- Item Details -->
    <section>
      <h2 class="text-xl font-semibold border-b pb-2 mb-4">Item Details</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div>
          <p class="text-sm text-gray-500">Item</p>
          <p class="font-medium">Medical Face Masks</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Quantity</p>
          <p class="font-medium">1,000 units</p>
        </div>
        <div>
          <p class="text-sm text-gray-500">Expiry Date</p>
          <p class="font-medium">2026-01-01</p>
        </div>
        <div class="col-span-full">
