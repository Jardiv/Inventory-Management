---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import StockInTable from '../../components/transactions/StockInTable.jsx';
import StockOutTable from '../../components/transactions/StockOutTable.jsx';

const limit = 3;
---

<!-- STOCK TRANSACTION DASHBOARD -->
<Layout>
	<!-- HEADER -->
	<div class="flex flex-col gap-1 w-full bg-primary p-4 rounded">
		<a href="/stockTransaction/Logs/" class="w-[20%]">
			<Button class="text-btn-primary py-2 w-full font hover:bg-btn-primary hover:text-textColor-secondary font-semibold">
				See Transaction Logs
			</Button>
		</a>
	</div>

	<!-- STOCK IN TRANSACTION TABLE -->
	<div class="flex flex-col gap-1 w-full bg-primary p-4 mt-4">
		<div class="w-full flex justify-between">
			<h1 class="text-xl font-bold">Stock In Transactions</h1>
			<a href="/stockTransaction/StockIn/" class="w-fit">
				<Button class="text-btn-primary border-none w-fit hover:text-textColor-tertiary"> See All </Button>
			</a>
		</div>
		<div class="p-2">
			<StockInTable limit={limit} client:load/>
		</div>
	</div>

	<!-- STOCK OUT TRANSACTION TABLE -->
	<div class="flex flex-col gap-1 w-full bg-primary p-4 mt-4">
		<div class="w-full flex justify-between">
			<h1 class="text-xl font-bold">Stock Out Transactions</h1>
			<a href="/stockTransaction/StockTransactions/?type=out">
				<Button class="text-btn-primary border-none w-fit hover:text-textColor-tertiary">See All</Button>
			</a>
		</div>
		<div class="p-2">
			<StockOutTable limit={limit} client:load/>
		</div>
	</div>
</Layout>
