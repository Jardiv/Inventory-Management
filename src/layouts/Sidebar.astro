				</svg>
				Settings
			</a>

			<button class="btn-theme flex gap-2 items-center p-2 rounded cursor-pointer relative" onClick="toggleTheme()">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					strokeWidth="{1.5}"
					stroke="currentColor"
					class="icon light-icon active">
					<path
						strokeLinecap="round"
						strokeLinejoin="round"
						d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
				</svg>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" strokeWidth="{1.5}" fill="currentColor" class="icon dark-icon">
					<path
						fill-rule="evenodd"
						d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z"
						clip-rule="evenodd" />
				</svg>
			</button>
		</div>

	</nav>

	
<script is:inline>

	function toggleTheme(){
		console.log("Toggle Theme");
		const btn_theme = document.querySelector(".btn-theme");
		const light_icon = document.querySelector(".light-icon");
		const dark_icon = document.querySelector(".dark-icon");
		
		
		// Remove active class and animation
		btn_theme.classList.remove("active");

		// Force reflow to restart animation
		void btn_theme.offsetWidth;

		// Toggle theme and add active class to trigger animation
		btn_theme.classList.add("active");

		light_icon.classList.toggle("active");
		dark_icon.classList.toggle("active");

		document.documentElement.classList.toggle('dark');
	}
</script>
</aside>
